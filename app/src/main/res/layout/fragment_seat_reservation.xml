<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.seatreservation.SeatReservationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:baselineAligned="false"
            android:text="Asiento número:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_iterator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="01" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_fullname_seat_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombre Completo:" />

        <EditText
            android:id="@+id/txt_id_number_user_seat_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Número de Cédula:"/>

        <Button
            android:id="@+id/btn_seat_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Asiento"
            android:textAllCaps="false"
            android:layout_margin="8dp"/>

    </LinearLayout>


</LinearLayout>