<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.circleappsstudio.mimisa.ui.main.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_seatReservationFragment"
            app:destination="@id/seatReservationFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.circleappsstudio.mimisa.ui.main.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/seatReservationFragment"
        android:name="com.circleappsstudio.mimisa.ui.main.seatreservation.SeatReservationFragment"
        android:label="fragment_seat_reservation"
        tools:layout="@layout/fragment_seat_reservation" />
</navigation>